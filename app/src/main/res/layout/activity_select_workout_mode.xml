<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sepiol.fitnessapp.SelectWorkoutMode">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:textColor="#000000"
        android:text="Select your Goal" />

    <Button
        android:id="@+id/weightButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo"
        android:layout_below="@+id/text"
        android:layout_marginTop="40dp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:text="Lose Weight"/>

    <Button
        android:id="@+id/muscleButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/logo"
        android:layout_alignStart="@+id/logo"
        android:layout_below="@+id/weightButton"
        android:layout_marginTop="40dp"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:text="Gain Muscle"/>

    <TextView
        android:id="@+id/projectname"
        android:text="Gym Buddy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:paddingBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
